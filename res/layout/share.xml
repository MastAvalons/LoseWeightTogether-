<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  style="@style/backColor">
   <RelativeLayout 
  	android:layout_width="fill_parent" 
  	android:layout_height="wrap_content"
  	
  	>
  	<ImageButton 
  	android:src="@drawable/btn_vk"
  	android:layout_width="68dp"
  	android:layout_height="68dp"
  	android:id="@+id/imgBtnVKShare"
  	android:background="@null"
  	android:scaleType="fitCenter"
  	android:paddingLeft="10dp" android:onClick="myClickHandler"/>
  	<TextView
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="@string/share_vk"
  	android:layout_toRightOf="@id/imgBtnVKShare"
  	android:gravity="center"
  	android:layout_centerVertical="true"
  	android:typeface="serif"
  	android:paddingRight="5dp"
  	android:textSize="22dp"
  	android:textColor="#FFFFFF"></TextView>
   </RelativeLayout>  
   <RelativeLayout 
  	android:layout_width="fill_parent" 
  	android:layout_height="wrap_content"
  	
  	>
  	<ImageButton 
  	android:src="@drawable/btn_facebook"
  	android:layout_width="68dp"
  	android:layout_height="68dp"
  	android:scaleType="fitCenter"
  	android:paddingLeft="10dp"
  	android:id="@+id/imgBtnFacebookShare" 
  	android:background="@null"
  	android:onClick="myClickHandler"
  	>
  	    
  	</ImageButton>
  	<TextView
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:text="@string/share_facebook"
  	android:layout_toRightOf="@id/imgBtnFacebookShare"
  	android:paddingRight="5dp"
  	android:layout_centerVertical="true"
  	android:typeface="serif"
  	android:textSize="22dp"
  	android:textColor="#FFFFFF"></TextView>
   </RelativeLayout>  
</LinearLayout>
